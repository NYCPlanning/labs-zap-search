{{!Approval options}}
{{#if (eq this.recommendation "Favorable")}}
  <FaIcon @icon="thumbs-up" @class="green-dark" />
{{/if}}
{{!Conditional approval options}}
{{#if (eq this.recommendation "Conditional Favorable")}}
<span class="fa-layers">
  <FaIcon @icon="thumbs-up" @class="green-dark" />
  <FaIcon @icon="question" @class="white" @transform="shrink-9 right-2 down-2" />
</span>
{{/if}}
{{!Disapproval options}}
{{#if (eq this.recommendation "Unfavorable")}}
  <FaIcon @icon="thumbs-down" @class="red-dark" />
{{/if}}
{{!Conditional disapproval options}}
{{#if (eq this.recommendation "Conditional Unfavorable")}}
<span class="fa-layers">
  <FaIcon @icon="thumbs-down" @class="red-dark" />
  <FaIcon @icon="question" @class="white" @transform="shrink-9 right-2 up-2" />
</span>
{{/if}}
{{!No opinion options}}
{{#if (or (eq this.recommendation "Waiver of Recommendation") (eq this.recommendation "No Objection"))}}
  <FaIcon @icon="comment-slash" @class="gray" />
{{/if}}

{{#if this.action.dcpName}}
  <EmberTooltip>
    <strong class="display-block tiny-margin-bottom">{{this.recommendation}}</strong>
    <span class="display-inline-block">{{this.action.dcpName}}</span>
    <small class="display-inline-block">{{this.action.dcpUlurpnumber}}</small>
  </EmberTooltip>
{{/if}}
