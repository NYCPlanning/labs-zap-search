<div class="cell">

  <div class="grid-container">
    <div class="grid-x grid-padding-x grid-padding-y">
      <div class="cell large-7">

        <h1 class="no-margin">Geography Name</h1>

        <h2 class="header-large">Recent Projects</h2>

        <hr class="small-margin" />

        <ul class="menu text-small align-center vertical medium-horizontal">
          <li><a>{{fa-icon 'check-circle' class="dark-gray"}} Filed</a></li>
          <li><a>{{fa-icon 'circle-o' class="medium-gray"}} Approved</a></li>
          <li><a>{{fa-icon 'circle-o' class="medium-gray"}} Certified</a></li>
          <li><a>{{fa-icon 'circle-o' class="medium-gray"}} Withdrawn</a></li>
        </ul >

        <hr class="small-margin" />

        <ul class="no-bullet">
          {{#each model.projects as |project|}}
            {{#link-to 'show-project' project class="grid-x grid-padding-small" tagName='li'}}
              <div class="cell shrink"><a class="button gray text-orange">{{fa-icon 'map-marker' size=2}}</a></div>
              <div class="cell auto">
                <h3 class="no-margin"><strong><a>{{project.dcp_name}}</a></strong></h3>
                <p class="text-small dark-gray">Filed {{project.dcp_certifiedreferred}} <span class="medium-gray">|</span> Certified/Referred {{project.dcp_certifiedreferred}} </p>
              </div>
            {{/link-to}}
          {{/each}}
        </ul>

      </div>
      <div class="cell large-5">

        <p><img src="http://via.placeholder.com/1200x800?text=MAP" /></p>
        {{!-- {{mapbox-gl}} --}}

        <br/>
        <h4>Yearly Archive</h4>
        <ul class="text-large">
          <li><a><strong class="header-large">2018</strong> <span class="dark-gray"> 18 Projects</span></a></li>
          <li><a><strong class="header-large">2017</strong> <span class="dark-gray"> 12 Projects</span></a></li>
          <li><a><strong class="header-large">2016</strong> <span class="dark-gray"> 9 Projects</span></a></li>
          <li><a><strong class="header-large">2015</strong> <span class="dark-gray"> 24 Projects</span></a></li>
          <li><a><strong class="header-large">2014</strong> <span class="dark-gray"> 7 Projects</span></a></li>
          <li><a><strong class="header-large">2012</strong> <span class="dark-gray"> 16 Projects</span></a></li>
          <li><a><strong class="header-large">2009</strong> <span class="dark-gray"> 3 Projects</span></a></li>
        </ul>

      </div>
    </div>

    {{outlet}}

  </div>
</div>
