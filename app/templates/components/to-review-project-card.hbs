<div
  class="project-summary-card callout"
  data-test-project-card
>
  <div class="grid-x grid-x-small-gutters">
    <div class="cell large-6">
      <h3 class="tiny-margin-bottxrom">
        {{#link-to 'show-project' project.id}}{{project.dcp_projectname}}{{/link-to}}
        <small class="dark-gray">{{project.ulurp_nonulurp}}</small>
      </h3>
      <h5 class="applicant">{{project.applicants}}</h5>
      <p>{{project.dcp_projectbrief}}</p>
    </div>
    <div class="cell medium-4 large-shrink">
      <div class="lup-countdown medium-margin-right medium-margin-left">
        <p class="cert-date">Certified 11/08/2019</p>
        <p class="days">8</p>
        <p class="total">of 60 days remain</p>
        <p class="end-date">Ends 12/15/19</p>
      </div>
    </div>
    <div class="cell medium-8 large-auto">
      <div class="grid-x grid-x-small-gutters">
        <div class="cell medium-6 large-auto">
          {{#if hearingsSubmitted}}
            <h5 class="column-header">Hearing Information</h5>
                <ul class="no-bullet">
                {{#each dedupedHearings as |hearing|}}
                  <li class="grid-x">
                    <div class="cell shrink small-margin-right">
                      {{#if (is-before hearing.dateofpublichearing)}}
                        {{fa-icon "calendar" class="light-gray" fixedWidth=true}}
                      {{else}}
                        {{fa-icon "check" class="blue" fixedWidth=true}}
                      {{/if}}
                    </div>
                    <div class="cell-auto">
                      <strong class="display-block hearing-location">
                        {{~hearing.publichearinglocation~}}
                      </strong>
                      <span class="hearing-date">
                        {{~moment-format hearing.dateofpublichearing "MM/D/YYYY"~}}
                      </span>
                      <span class="light-gray">|</span>
                      <span class="hearing-time">
                        {{~moment-format hearing.dateofpublichearing "h:mm A"~}}
                      </span>
                    </div>
                  </li>
                {{/each}}
                </ul>
          {{else}}
            <LinkTo
              @route="my-projects.project.hearing.add"
              @model={{project}}
              class="button multiline expanded"
            >
              Submit<br>
              Comminity&nbsp;Board
              <br>Hearing Info
            </LinkTo>
          {{/if}}
        </div>
        <div class="cell medium-6 large-auto" data-test-submit-recommendation-btn>
          <LinkTo @route="my-projects.project.recommendations.add"
            @model={{project}}
            @query={{hash participantType="CB"}}
            class="button multiline expanded"
          >
            Submit<br>
            Community&nbsp;Board
            <br>Recommendation
          </LinkTo>
        </div>
      </div>
    </div>
  </div>
</div>
