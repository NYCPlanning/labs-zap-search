{{!--
  Docs for ember-file-upload is here:
  https://adopted-ember-addons.github.io/ember-file-upload/docs
--}}
<fieldset class="medium-margin-bottom">
  <legend>
    <strong>
      Upload supporting documents
    </strong>
  </legend>
  <div class="grid-x grid-margin-x">
    <div class="cell medium-shrink">
      <FileUpload
        id={{concat this.queueName "FileUpload"}}
        @name={{concat this.queueName}}
        @accept='*/*'
        @multiple={{true}}
        @onfileadd={{this.onFileAdd}}
        class="button gray no-margin"
      >
        {{fa-icon 'upload'}} Choose Files
      </FileUpload>
    </div>
    <div class="cell auto">
      <ul class="no-bullet">
        {{#with (file-queue name=this.queueName) as |queue|}}
          {{#each queue.files as |file|}}
            <li data-test-file-name={{file.name}}>
              <a {{action "removeFile" queue file}}>
                {{fa-icon 'times' class='red-muted' fixedWidth=true}}
              </a>
              {{file.name}}
              <small>
                ({{file.type}})
              </small>
            </li>
          {{/each}}
        {{/with}}
      </ul>
    </div>
  </div>
</fieldset>
