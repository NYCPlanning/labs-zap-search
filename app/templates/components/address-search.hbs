<LabsSearch
  searchPlaceholder='Zoom to Address...'
  onSelect={{fn this.selectSearchResult}}
  onClear={{fn this.clearSearchResult}} as |search|>

  <small class="dark-gray">{{search.result.label}}</small>

  {{#if search.result}}
    {{#if this.geocodedGeometry}}
      <this.map.Source @options={{hash
      type='geojson'
      data=this.geocodedGeometry}} as |source|>
        <source.Layer @layer={{this.geocodedLayer}}/>
      </this.map.Source>

      {{this.map.call 'flyTo' (hash center=this.geocodedGeometry.coordinates zoom=16)}}
    {{/if}}
  {{/if}}
</LabsSearch>
