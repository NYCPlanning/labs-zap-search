{{#if this.open}}
  <div class="reveal-overlay">
    <button onClick={{fn this.closeModal}} type="button" class="reveal-overlay-target"></button>
    <div
      class="reveal"
      role="dialog"
      aria-hidden={{false}}
      tabindex="-1"
      data-test-confirmation-modal
    >
      {{yield}}
      <button onClick={{fn this.closeModal}} class="close-button" aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
{{/if}}
