{{#if this.shouldQueryFullMap}}
  <this.map.Source @options={{hash
    type='geojson'
    data=(hash
      type='Feature'
      geometry=(hash
        type='Point'
        coordinates=this.pointGeometry
      )
    )}} as |source|
  >
    <source.Layer @layer={{hash
      type='circle'
      paint=(hash circle-color='rgba(238,102,170,0.8)' circle-radius=7)}}
    />
  </this.map.Source>
  {{! only display radius circle and zoom to point if point exists}}
  {{#if this.pointGeometry}}
    <this.map.Source @options={{hash
      type='geojson'
      data=this.circleFromRadius}} as |source|
    >
      <source.Layer @layer={{hash
        type='line'
        paint=(hash line-dasharray=(array 1 1) line-width=3 line-color='rgba(238,102,170,0.8)')}}
      />
    </this.map.Source>
  {{/if}}
{{/if}}

{{map.on 'click' (fn this.handleClick)}}

{{yield this.map}}
{{yield (hash circleFromRadius=this.circleFromRadius)}}
