<div class="filter active">
  <h6 class="filter-name">Project Status</h6>
  <ul class="menu vertical medium-horizontal">
    <li onclick={{action mutateArray 'dcp_publicstatus' 'Filed'}}>
      <a>
        {{filter-checkbox
          value='Filed'
          currentValues=projectFilters.dcp_publicstatus}}
      </a>
    </li>
    <li onclick={{action mutateArray 'dcp_publicstatus' 'Approved'}}>
      <a>
        {{filter-checkbox
          value='Approved'
          currentValues=projectFilters.dcp_publicstatus}}
      </a>
    </li>
    <li onclick={{action mutateArray 'dcp_publicstatus' 'Certified'}}>
      <a>
        {{filter-checkbox
          value='Certified'
          currentValues=projectFilters.dcp_publicstatus}}
      </a>
    </li>
    <li onclick={{action mutateArray 'dcp_publicstatus' 'Withdrawn'}}>
      <a>
        {{filter-checkbox
          value='Withdrawn'
          currentValues=projectFilters.dcp_publicstatus}}
      </a>
    </li>
    <li onclick={{action mutateArray 'dcp_publicstatus' 'Unknown'}}>
      <a>
        {{filter-checkbox
          value='Unknown'
          currentValues=projectFilters.dcp_publicstatus}}
      </a>
    </li>
  </ul>
</div>
{{!-- <div class="filter">Borough</div> --}}

<div class="filter">
  <h6 class="filter-name">Community Districts</h6>
  <div class="medium-horizontal">
    {{#power-select-multiple
      options=communityDistrictOptions
      selected=selectedDistricts
      placeholder="Select some names..."
      searchField='searchField'
      onchange=(action replaceProperty 'community-districts')
      as |district|
    }}
      {{district.boro}} {{district.num}}
    {{/power-select-multiple}}
  </div>
</div>
<div class="filter">
  <h6 class="filter-name">CEQR Type</h6>
  <ul class="menu vertical medium-horizontal">
    <li onclick={{action mutateArray 'dcp_ceqrtype' 'Unlisted'}}><a>
      {{filter-checkbox
        value='Unlisted'
        currentValues=projectFilters.dcp_ceqrtype}}
    </a></li>
    <li onclick={{action mutateArray 'dcp_ceqrtype' 'Type I'}}><a>
      {{filter-checkbox
        value='Type I'
        currentValues=projectFilters.dcp_ceqrtype}}
    </a></li>
    <li onclick={{action mutateArray 'dcp_ceqrtype' 'Type II'}}><a>
      {{filter-checkbox
        value='Type II'
        currentValues=projectFilters.dcp_ceqrtype}}
    </a></li>
  </ul>
</div>
<div class="filter">
  <h6 class="filter-name">FEMA Flood Zone</h6>
  <ul class="menu vertical medium-horizontal">
    <li onclick={{action toggleBoolean 'dcp_femafloodzonea'}}>
      <a>
        {{fa-icon
          (if projectFilters.dcp_femafloodzonea 'check-square' 'square')
          prefix=(unless projectFilters.dcp_femafloodzonea 'far')
          class=(if projectFilters.dcp_femafloodzonea 'dark-gray' 'medium-gray')
        }} A
      </a>
    </li>
    <li onclick={{action toggleBoolean 'dcp_femafloodzoneshadedx'}}>
      <a>
        {{fa-icon
          (if projectFilters.dcp_femafloodzoneshadedx 'check-square' 'square')
          prefix=(unless projectFilters.dcp_femafloodzoneshadedx 'far')
          class=(if projectFilters.dcp_femafloodzoneshadedx 'dark-gray' 'medium-gray')
        }} X
      </a>
    </li>
    <li onclick={{action toggleBoolean 'dcp_femafloodzonecoastala'}}>
      <a>
        {{fa-icon
          (if projectFilters.dcp_femafloodzonecoastala 'check-square' 'square')
          prefix=(unless projectFilters.dcp_femafloodzonecoastala 'far')
          class=(if projectFilters.dcp_femafloodzonecoastala 'dark-gray' 'medium-gray')
        }} Coastal A
      </a>
    </li>
    <li onclick={{action toggleBoolean 'dcp_femafloodzonev'}}>
      <a>
        {{fa-icon
          (if projectFilters.dcp_femafloodzonev 'check-square' 'square')
          prefix=(unless projectFilters.dcp_femafloodzonev 'far')
          class=(if projectFilters.dcp_femafloodzonev 'dark-gray' 'medium-gray')
        }} V
      </a>
    </li>
  </ul>
  {{icon-tooltip tip='FEMA flood zone filters are applied collectively, checking more than one will yield only projects affected by all checked zones'}}
</div>
<div class="filter">
  <h6 class="filter-name">ULURP</h6>
  <ul class="menu vertical medium-horizontal">
    <li  onclick={{action mutateArray 'dcp_ulurp_nonulurp' 'ULURP'}}>
      <a>
        {{filter-checkbox
          value='ULURP'
          currentValues=projectFilters.dcp_ulurp_nonulurp}}
      </a>
    </li>
    <li  onclick={{action mutateArray 'dcp_ulurp_nonulurp' 'Non-ULURP'}}>
      <a>
        {{filter-checkbox
          value='Non-ULURP'
          currentValues=projectFilters.dcp_ulurp_nonulurp}}
      </a>
    </li>
  </ul>
</div>
<div class="filter">
  <h6 class="filter-name">Action Status Reason</h6>
  <ul class="menu vertical medium-horizontal">
    <li><a>{{fa-icon 'square' prefix='far' class="medium-gray"}} Active</a></li>
    <li><a>{{fa-icon 'square' prefix='far' class="medium-gray"}} Certified</a></li>
    <li><a>{{fa-icon 'square' prefix='far' class="medium-gray"}} Referred</a></li>
    <li><a>{{fa-icon 'square' prefix='far' class="medium-gray"}} Approved</a></li>
    <li><a>{{fa-icon 'square' prefix='far' class="medium-gray"}} Withdrawn</a></li>
    <li><a>{{fa-icon 'square' prefix='far' class="medium-gray"}} Terminated</a></li>
  </ul>
</div>
